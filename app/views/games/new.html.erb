  <div class="body-main-div-form-new-game">
<div class="container-form-new-game">
    <div class="parent-form-new-game">
        <h3 class="mt-4">Create a new game</h3>
      <div class="child-form-new-game">
        <%= simple_form_for @game do |f| %>
          <%= f.input :title, placeholder: 'Catan' %>
          <%= f.input :difficulty, placeholder: 'Hard' %>
          <%= f.input :player_count, placeholder: '2' %>
          <%= f.input :play_time, placeholder: '2 hrs' %>
          <%= f.input :price, placeholder: 'Pricing' %>
          <%= f.input :description, placeholder: 'Conquer the universe blablabla.' %>
          <%= f.association :category %>
          <%= f.submit class: 'actions-new' %>
        <% end %>
      </div>
    </div>
</div>
  </div>
