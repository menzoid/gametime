<%# body div for the page %>
<div class="body-main-index-page">
  <%# top games on the top %>
  <div class="top-games-index-page">
    <%# banner featured game %>
    <%= link_to root_path do %>
    <div class="banner-top-feature-game-index bg-img-banner">
      <div class="banner-feature-content-game-index">
        <h1><%= @featured_game.title %></h1>
        <p><%= @featured_game.description %></p>
        <button class="button-game-home-page"><%= link_to 'Games', games_path %></button>
      </div>
    </div>
    <% end %>
    <%# side featured games %>
    <div class="side-game-feature-game-index">
      <% @games[0..2].each do |game| %>
        <div class="div-game-index">
          <div class="picture-of-the-div-game-index">
            <%= link_to root_path do %>
            <%= image_tag("/assets/image-random-boardGame.jpeg") %>
            <% end %>
          </div>
          <div class="content-of-the-div-game-index">
            <div class="content-of-the-div-game-index-p">
              <p>Title :<%= game.title %></p>
              <p>Difficulty :<%= game.difficulty %></p>
              <p>Players require:<%= game.player_count %></p>
              <p>Play Time :<%= game.play_time %></p>
              <p>Price :<%= game.price %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>


    <%# cards category div bottom %>
  <div class="category-main-div-game-index">
    <div class="category-layout-design-category-game-index">
      
    </div>
  </div>
</div>







