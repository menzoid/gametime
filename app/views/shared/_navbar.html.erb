  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <div class="logo-content-icon-left">
      <div class="logo-navbar-gametime">
        <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "https://res.cloudinary.com/menzoid/image/upload/v1637944359/CategoryGameTime/profile-avatar01_ov6g3z.png" %>
        <% end %>
      </div>
      <%= link_to "GameTime", root_path, class: "nav-link" %>
    </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
